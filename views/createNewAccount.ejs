<%- include('partials/header.ejs') %>
<body>
    <div class="bg-img d-flex align-items-center text-center">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="bg-light mx-5 px-4 custom-rounded">
                        <a href="/" class="d-flex py-3">Back to sign in</a>

                        <form method="POST" id="signupForm" action="newUser" class="custom-padding">
                            <h2 class="text-center pb-2 fw-bold"> Create Account </h2>
                            <div class="row justify-content-evenly">
                                <div class="form-floating custom-margin ps-1 col-8">
                                    <input type="text" class="form-control border border-dark" name="username" id="username" placeholder="Username"/>
                                    <label for="username">Username</label>
                                  </div>
                            </div>
                            <div class="row justify-content-evenly">
                                <div class="form-floating custom-margin ps-1 col-8">
                                    <input type="password" class="form-control border border-dark" name="password" id="password" placeholder="Password"/>
                                    <label for="password">Password</label>
                                  </div>
                            </div>
                            <div class="row justify-content-evenly">
                                <div class="form-floating custom-margin ps-1 col-8">
                                    <input type="password" class="form-control border border-dark" name="retypedPassword" id="retypedPassword" placeholder="Re-type Password"/>
                                    <label for="retypedPassword">Re-type Password</label>
                                  </div>
                                <div id="feedback" class="text-danger"></div>
                                <div class="d-flex  align-items-center flex-column">
                                    <input type="submit" class="btn write-review-btn px-5 py-2 mt-4" value="Sign Up">
                                </div>
                            </div>
                        </form>
                    </div>

                </div>

            </div>
        </div>
    </div>
    <script src="js/addUser.js"></script>

</body>

</html>