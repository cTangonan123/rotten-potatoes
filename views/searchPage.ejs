  <!-- Main Content Section -->
  <div class="container-fluid px-0 position-relative">

  
    <div class="container-fluid px-0 mt-4 position-absolute justify-content-end text-start w-100" style="z-index:10;">
      <div class="row justify-content-end mt-3 ms-auto me-0">
        <div class="col col-9 col-md-8 col-lg-6 justify-self-end pt-4 ps-4 pe-5 ms-auto me-0 rounded-start-5" style="background-color: rgba(0,0,0,0.6);">
          <h1 class="text-light">Search Movies</h1>
          <!-- Search Form -->
          <form action="/search/results" method="GET" class="form-inline mb-4">
            <div class="input-group col-12">
              <input type="text" name="searchQuery" id="search-query" class="form-control" placeholder="Search for a movie"
                required>
              <button type="submit" class="btn btn-primary">Search</button>
            </div>
            <div class="justify-self-end text-end mt-2 text-light" style="text-decoration:none">
              powered by <a href="https://www.themoviedb.org/" target="_blank" class="text-light">The Movie Database</a>
            </div>
          </form>
        </div>
      </div>
    </div>

  <!-- Carousel -->
  
    <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <% for (let i = 1; i < popularMovies.length; i++) { %>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="<%=i%>" aria-label="Slide <%=i+1%>"></button>
        <% } %>
        
      </div>
      <div class="carousel-inner object-fit-cover" style="max-height:600px;">
        <% for (let [index, movie] of popularMovies.entries()) { %>
        <div class="carousel-item position-relative <%= index==0 ? 'active' : ''%>">
          <form action="/description" id="popularMovie">
            <!-- <input type="hidden" name="id" value="<%=movie.id%>"> -->
          <button class="p-0 h-100 m-0 transparent" type="submit" name="id" value="<%=movie.id%>" style="text-decoration:none">
          <div class="d-block position-absolute w-100 h-100 m-0 p-0 popMovieDisplay" style="background-color: rgba(0,0,0,0.4); max-height: 600px">
            <div class="text-start container h-100" style="overflow-y: scroll;">
              <div class="row align-items-end h-100">
                <div class="col col-12 mt-auto overflow-auto" style="max-height: 300px">
                  
                  <h2 class="text-light px-4 mb-5 mb-md-0 popMovieTitle"><%=movie.title%></h2>
                
                  <div class="col col-12 col-md-8 col-lg-6 pb-3 mb-3 d-none d-md-flex">
                    <p class="text-light px-4 overflow-auto" style="height: 120px;"><%=movie.overview%></p>
                  </div>
                </div>
              </div>
            </div>
            
          </div>
          </button>
          </form>
          <img src="https://image.tmdb.org/t/p/w1280<%=movie.backdrop_path%>" class="d-block w-100 ratio-16x9 object-fit-cover" alt="picture of backdrop of <%=movie.title%>">
        </div>
        <% } %>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
    </div>
  </div>

  

    

