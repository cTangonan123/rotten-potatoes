  <!-- Carousel -->
  <div class="container-fluid px-0 position-absolute" style="z-index:5; background-color: rgba(0,0,0,0.6); height:95vh">
  </div>
  <div class="container-fluid px-0 position-absolute" style="z-index:-1; background-color: rgba(0,0,0,1); height:95vh">
  </div>

  
    <div id="carouselExampleCaptions" class="carousel slide mt-0 py-0" data-bs-ride="carousel">
      <div class="carousel-indicators" style="z-index: 11">
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1" style="z-index:11"></button>
        <% for (let i = 1; i < popularMovies.length; i++) { %>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="<%=i%>" aria-label="Slide <%=i+1%>" style="z-index:11"></button>
        <% } %>
        
      </div>
      <div class="carousel-inner object-fit-cover mt-0 py-0 h-100">
        <% for (let [index, movie] of popularMovies.entries()) { %>
        <div class="carousel-item position-relative py-0 <%= index==0 ? 'active' : ''%>"style="height:95vh">
          <form action="/description" id="popularMovie" class="hidden">
            <!-- <input type="hidden" name="id" value="<%=movie.id%>"> -->
          <button class="p-0 h-100 m-0 transparent" type="submit" name="id" value="<%=movie.id%>" style="text-decoration:none">
          <div class="position-absolute w-100 h-100 m-0 p-0 popMovieDisplay" style="z-index:6; height: 95vh">
            <div class="text-start container h-100">
              <div class="row align-items-end h-100 overflow-auto">
                <div class="col col-12 mt-auto popMovieTitle">
                  
                  <h2 class="text-light px-4 mb-0"><%=movie.title%></h2>
                
                  <div class="col col-12 col-md-8 col-lg-6 pb-3 mb-3">
                    <p class="text-light px-4 overflow-auto" "><%=movie.overview%></p>
                  </div>
                </div>
              </div>
            </div>
            
          </div>
          </button>
          </form>
          <img src="https://image.tmdb.org/t/p/w1280<%=movie.backdrop_path%>" class="d-block w-100 h-100 object-fit-cover" alt="picture of backdrop of <%=movie.title%>">
        </div>
        <% } %>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev" style="z-index:9">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next" style="z-index:9">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
    </div>
  </div>

  <script>
    document.querySelector(".navBarSearch").classList.add("d-none");
  </script>

